<Window x:Class="WpfAppPR3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPR3"
        mc:Ignorable="d"
        Title="MainWindow" Height="523" Width="862" Loaded="Window_Loaded">
    <Button>
        <Grid Height="507" Width="862">
            <Label Content="Просмотр погоды" HorizontalAlignment="Center" Height="43" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="20"/>
            <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="wrapPanelWeather" Height="Auto" Width="Auto"/>
            </ScrollViewer>
            <Label x:Name="labelLoad" Content="Загрузка" HorizontalAlignment="Center" Height="43" VerticalAlignment="Top" Margin="0,227,0,0" FontSize="20" Width="92"/>
            <Button x:Name="buttonMinus" Content="Прошлые 25" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonMinus_Click"/>
            <Button x:Name="buttonPlus" Content="Следующие 25" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonPlus_Click"/>


        </Grid>
    </Button>
</Window>
